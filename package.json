{
    "name": "blueprint-gtk",
    "publisher": "bodil",
    "displayName": "Gtk Blueprint",
    "description": "Gtk Blueprint language support.",
    "version": "0.3.0",
    "license": "LGPL-3.0+",
    "author": {
        "name": "Bodil Stokke",
        "url": "https://bodil.lol/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bodil/vscode-blueprint"
    },
    "keywords": [
        "gtk",
        "gnome"
    ],
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:blueprint-gtk"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Blueprint",
            "properties": {
                "blueprint-gtk.command": {
                    "default":"blueprint-compiler",
                    "type": "string",
                    "description": "Blueprint executable"
                },
                "blueprint-gtk.arguments": {
                    "default": [],
                    "type":"array",
                    "description": "Extra arguments passed to the Blueprint executable"
                }
            }
        },
        "languages": [
            {
                "id": "blueprint-gtk",
                "aliases": [
                    "Blueprint",
                    "blp"
                ],
                "extensions": [
                    ".blp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "blueprint-gtk",
                "scopeName": "source.blueprint-gtk",
                "path": "./syntaxes/blueprint.tmGrammar.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "compile": "tsc -b",
        "watch": "tsc -b --watch",
        "clean": "rm -rf out"
    },
    "devDependencies": {
        "@types/node": "^17.0.35",
        "@types/vscode": "^1.67.0",
        "esbuild": "^0.14.39",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.1"
    }
}
